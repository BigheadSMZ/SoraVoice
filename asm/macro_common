
%define ptr_impaddr_table (addr_voice + 0x170)

%define addr_codebase (addr_voice + 0x200)
%define ptr_initparam (addr_voice + 0x200)

%define ptr_sv					ptr_initparam
%define ptr_flag_ended			(ptr_initparam + 0x05)
%define ptr_flag_playing		(ptr_initparam + 0x06)
%define ptr_flag_disable_du		(ptr_initparam + 0x08)
%define ptr_flag_disable_dlgse	(ptr_initparam + 0x09)
%define ptr_flag_skipvoice		(ptr_initparam + 0x0A)
%define ptr_flag_autoplay		(ptr_initparam + 0x0B)

%define ptr_p_keys				(ptr_initparam + 0x20)
%define ptr_keys_old			(ptr_initparam + 0x28)

%define ptr_tmp (ptr_initparam + 0x30)

%define ptr_voice_init		(ptr_impaddr_table + 0x00)
%define ptr_voice_end		(ptr_impaddr_table + 0x04)
%define ptr_voice_play		(ptr_impaddr_table + 0x08)
%define ptr_voice_stop		(ptr_impaddr_table + 0x0C)
%define ptr_voice_input		(ptr_impaddr_table + 0x10)
%define ptr_voice_d3d		(ptr_impaddr_table + 0x14)

%define volume_lowest -10000

%define dik_space	0x39
%define dik_5		0x06
%define dik_equal	0x0D
%define dik_beg		dik_5
%define dik_end		dik_equal

%define dik_press	0x80

%define vs_d3d			(addr_codebase + 0x40)
%define vs_text			(addr_codebase + 0x60)
%define vs_dududu		(addr_codebase + 0xC0)
%define vs_dlgse		(addr_codebase + 0x140)
%define vs_input		(addr_codebase + 0x200)


